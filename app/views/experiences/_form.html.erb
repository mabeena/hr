<%= form_for(@experience) do |f| %>
	<%= f.collection_select :employee_id, @employees, :id, :employee_name, :prompt => 'Employee' %>
	<%= f.text_field :company, :placeholder => "Company"%>
	<%= f.text_field :title, :placeholder => "Title" %>
	<%= f.select :field, Experience::IND_TYPES, :prompt => 'Industry' %>
	<%= f.date_select :startdate, start_year: 2015, end_year: 1990, :order => [:month, :year], prompt: { month: 'Month', year: 'Year' } %>
	<%= f.label :enddate, "â€“" %>
	<%= f.date_select :enddate, start_year: 2015, end_year: 1990, :order => [:year], :prompt => 'Year' %>
    <%= f.submit "Submit" %>
<% end %>